# Backend (Node/Express) environment variables
# Copy to backend/.env for local dev.
# For hosting providers, add these as “Environment Variables”.

# Required
NODE_ENV=production
# PORT is usually provided by the host; keep for local runs
PORT=5000

# Your deployed frontend URL (used for CORS + OAuth redirects + Stripe success/cancel URLs)
FRONTEND_URL=https://your-frontend.example

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
SESSION_SECRET=replace-with-a-long-random-string
JWT_SECRET=replace-with-a-long-random-string
JWT_EXPIRE=7d

# Google OAuth (optional; required only if you use “Sign in with Google”)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Must match your deployed backend URL + this exact path:
#   /api/auth/google/callback
GOOGLE_CALLBACK_URL=https://your-backend.example/api/auth/google/callback

# Python timetable generator service
# Should point to the FastAPI service base URL (no trailing slash)
PY_API_URL=https://your-python.example

# Optional tweaks
BODY_LIMIT=10mb

# Stripe payments (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=usd

# Email / SMTP (optional; otherwise the app uses Ethereal test SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Smart Scheduler <no-reply@your-domain.example>
